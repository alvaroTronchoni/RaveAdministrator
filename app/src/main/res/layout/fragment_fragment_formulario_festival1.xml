<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rave.android.views.FragmentFormularioFestival1">

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <!-- Nombre Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">

                <EditText
                    android:id="@+id/input_nombreFestival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Nombre"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Genero Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view2"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true">

                <EditText
                    android:id="@+id/input_generoFestival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Genero" />
            </android.support.design.widget.TextInputLayout>

            <!-- Ubicacion Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view3"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view2"
                android:layout_alignStart="@+id/view2">

                <EditText
                    android:id="@+id/input_ubicacionFestival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Ubicacion" />
            </android.support.design.widget.TextInputLayout>

            <!-- Latitud Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view4"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view3"
                android:layout_alignStart="@+id/view3">

                <EditText
                    android:id="@+id/input_latitudFestival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Latitud" />
            </android.support.design.widget.TextInputLayout>

            <!-- Longitud Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view5"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view4"
                android:layout_alignStart="@+id/view4">

                <EditText
                    android:id="@+id/input_longitudFestival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Longitud"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Descripcion Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view6"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view5"
                android:layout_alignStart="@+id/view5">

                <EditText
                    android:id="@+id/input_descripcionFestival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Descripcion"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Facebook Url Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view7"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view6"
                android:layout_alignStart="@+id/view6">

                <EditText
                    android:id="@+id/input_facebookUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="URL Facebook"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Facebook Url Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view8"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view7"
                android:layout_alignStart="@+id/view7">

                <EditText
                    android:id="@+id/input_webUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="URL Web"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Facebook Url Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view9"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view8"
                android:layout_alignStart="@+id/view8">

                <EditText
                    android:id="@+id/input_logoUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="URL Logo"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Facebook Url Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view10"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view9"
                android:layout_alignStart="@+id/view9">

                <EditText
                    android:id="@+id/input_backUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="URL Background"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Facebook Url Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view11"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view10"
                android:layout_alignStart="@+id/view10">

                <EditText
                    android:id="@+id/input_instagramUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Instagram User"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Facebook Url Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view12"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view11"
                android:layout_alignStart="@+id/view11">

                <EditText
                    android:id="@+id/input_entradasUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="URL Entradas"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Facebook Url Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view13"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view12"
                android:layout_alignStart="@+id/view12">

                <EditText
                    android:id="@+id/input_fechaInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Fecha Inicio"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Facebook Url Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view14"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view13"
                android:layout_alignStart="@+id/view13">

                <EditText
                    android:id="@+id/input_fechaFin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Fecha Fin"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Facebook Url Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view15"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view14"
                android:layout_alignStart="@+id/view14">

                <EditText
                    android:id="@+id/input_asistentesFestival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Asistentes Festival"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Facebook Url Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view16"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/view15"
                android:layout_alignStart="@+id/view15">

                <EditText
                    android:id="@+id/input_edicionesFestival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Ediciones Festival"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mrl_rippleColor="?attr/colorControlHighlight"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleDuration="350"
            app:mrl_rippleFadeDuration="75"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnAtras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atras"
                android:textColor="@color/myTextPrimaryColor"
                android:background="@color/myDrawerTextPrimaryColor"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mrl_rippleColor="?attr/colorControlHighlight"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleDuration="350"
            app:mrl_rippleFadeDuration="75"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Aceptar"
                android:background="@color/myPrimaryColor"/>

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

</RelativeLayout>