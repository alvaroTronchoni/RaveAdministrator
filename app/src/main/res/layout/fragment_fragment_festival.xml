<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/back_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/rlBack"
        android:background="#64000000"
        android:layout_alignParentBottom="true">

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rlPagerDescripcion"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/rlFestival">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardUseCompatPadding="false"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                app:cardCornerRadius="2dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:drawablePadding="16dp"
                android:id="@+id/cvDescripcion">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/rlDescripcion"
                        android:background="#ffffffff">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ic_facebook"
                            android:src="@drawable/ic_facebook56"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/linearLayout2"
                            android:layout_toStartOf="@+id/linearLayout2"
                            android:layout_marginRight="16dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_divider"
                            android:id="@+id/linearLayout2"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/rlAsistentes"
                            android:layout_toStartOf="@+id/rlAsistentes"
                            android:layout_marginRight="32dp"
                            android:layout_marginEnd="42dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp" />

                        <RelativeLayout
                            android:id="@+id/rlAsistentes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/asistentes_festival"
                                android:layout_alignParentTop="true"
                                android:textColor="@color/myPrimaryDarkColor"
                                android:textSize="18sp"
                                android:fontFamily="san-serif-bold"
                                android:textStyle="bold"
                                android:layout_centerInParent="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="asistentes"
                                android:id="@+id/textView"
                                android:textSize="12sp"
                                android:layout_below="@+id/asistentes_festival"
                                android:layout_centerHorizontal="true" />

                        </RelativeLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_divider"
                            android:id="@+id/linearLayout3"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/rlAsistentes"
                            android:layout_toEndOf="@+id/rlAsistentes"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/linearLayout3"
                            android:layout_toEndOf="@+id/linearLayout3"
                            android:layout_marginLeft="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ediciones_festival"
                                android:textColor="@color/myPrimaryDarkColor"
                                android:textSize="18sp"
                                android:fontFamily="san-serif-bold"
                                android:textStyle="bold"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ediciones"
                                android:id="@+id/textView3"
                                android:textSize="12sp"
                                android:layout_below="@+id/ediciones_festival"
                                android:layout_centerHorizontal="true" />

                        </RelativeLayout>

                    </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardUseCompatPadding="false"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                app:cardCornerRadius="2dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:drawablePadding="16dp"
                android:id="@+id/cvPager"
                android:layout_below="@+id/cvDescripcion"
                android:layout_marginTop="5dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/cvDescripcion"
                    android:background="#ffffffff" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/rlFestival"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <com.examen.raveadministrator.RoundedImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/logo_festival"
                android:layout_marginRight="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nombre_festival"
                android:textSize="20sp"
                android:fontFamily="sans-serif-thin"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/myTextPrimaryColor"
                android:layout_below="@+id/logo_festival"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ubicacion_festival"
                android:textColor="@color/myTextPrimaryColor"
                android:fontFamily="sans-serif-thin"
                android:textSize="18sp"
                android:layout_below="@+id/nombre_festival"
                android:layout_centerHorizontal="true" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:tabIndicatorColor="@android:color/white"
                android:elevation="6dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/FABMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_white_24dp"
        app:elevation="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        app:fab_colorNormal="@color/myPrimaryColor"
        app:fab_colorPressed="@color/myPrimaryDarkColor"
        app:fab_colorRipple="?attr/colorControlHighlight"/>

</RelativeLayout>